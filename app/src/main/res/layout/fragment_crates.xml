<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.crates.CratesFragment">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/sv_search_crates"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:queryHint="Busque crates..."
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Lista de crates -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCrates"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/sv_search_crates"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

<Button
        android:id="@+id/btn_back_skins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skins"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
